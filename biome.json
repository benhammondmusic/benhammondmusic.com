{
	"$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity":{
				"noForEach": "off"
			},
			"style": {
				"noParameterAssign": "off"

			}
		}
	},
	"overrides": [
		{
			"include": ["*.svelte"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off"
					},
					"suspicious": {
						"noConfusingLabels": "off",
						"noExplicitAny": "off",
						"noImplicitAnyLet": "off"
					}
				}
			}
		}
	]
}
